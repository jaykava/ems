<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">Soft Deleted Employees List (<%= @soft_deleted_employees.count %>)</h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Position</th>
            <th>Status</th>
            <th width="200">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @soft_deleted_employees.any? %>
            <% @soft_deleted_employees.each do |employee| %>
              <tr>
                <td>
                  <div class="fw-bold"><%= employee.full_name %></div>
                </td>
                <td><%= employee.email %></td>
                <td><%= employee.phone.presence || '-' %></td>
                <td>
                  <span class="badge bg-info"><%= employee.position %></span>
                </td>
                <td>
                  <span class="badge bg-<%= employee.status_badge_class %>">
                    <%= employee.status.humanize %>
                  </span>
                </td>
                <td>
                  <div class="btn-group" role="group" style="gap: 10px;">
                    <%= button_to restore_employee_path(employee),
                                  method: :patch,
                                  class: "btn btn-sm btn-outline-success",
                                  title: "Restore" do %>
                      <i class="bi bi-bootstrap-reboot"></i>
                    <% end %>

                    <%= button_to permanent_destroy_employee_path(employee),
                                  method: :patch,
                                  class: "btn btn-sm btn-outline-danger",
                                  title: "Permanent Delete" do %>
                      <i class="bi bi-database-x"></i></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="text-center py-4">
                <div class="text-muted">
                  <i class="bi bi-inbox display-4 d-block mb-2"></i>
                  No employees found.
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div style="text-align: center;margin-top: 15px;">
    <%= paginate @soft_deleted_employees, theme: 'bootstrap-5',
                pagination_class: "pagination-sm flex-wrap justify-content-center",
                nav_class: "d-inline-block" %>
  </div>
</div>
