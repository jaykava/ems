<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Edit Employee</h5>
      </div>
      <div class="card-body">
        <%= form_with model: @employee, local: true, class: "needs-validation", novalidate: true do |f| %>
          <%= render 'form', f: f %>
          
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Cancel", employee_path(@employee), class: "btn btn-secondary" %>
            <%= f.submit "Update Employee", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
