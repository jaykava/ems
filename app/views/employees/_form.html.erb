<% if @employee.errors.any? %>
  <div class="alert alert-danger">
    <h6>Please fix the following errors:</h6>
    <ul class="mb-0">
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 mb-3">
    <%= f.label :full_name, class: "form-label" %>
    <%= f.text_field :full_name, class: "form-control #{'is-invalid' if @employee.errors[:full_name].any?}", 
                     placeholder: "Enter full name" %>
    <% if @employee.errors[:full_name].any? %>
      <div class="invalid-feedback">
        <%= @employee.errors[:full_name].first %>
      </div>
    <% end %>
  </div>
  
  <div class="col-md-6 mb-3">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control #{'is-invalid' if @employee.errors[:email].any?}", 
                      placeholder: "Enter email address" %>
    <% if @employee.errors[:email].any? %>
      <div class="invalid-feedback">
        <%= @employee.errors[:email].first %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mb-3">
    <%= f.label :phone, class: "form-label" %>
    <%= f.telephone_field :phone, class: "form-control #{'is-invalid' if @employee.errors[:phone].any?}", 
                         placeholder: "Enter phone number" %>
    <% if @employee.errors[:phone].any? %>
      <div class="invalid-feedback">
        <%= @employee.errors[:phone].first %>
      </div>
    <% end %>
  </div>
  
  <div class="col-md-6 mb-3">
    <%= f.label :position, class: "form-label" %>
    <%= f.text_field :position, class: "form-control #{'is-invalid' if @employee.errors[:position].any?}", 
                     placeholder: "Enter position/job title" %>
    <% if @employee.errors[:position].any? %>
      <div class="invalid-feedback">
        <%= @employee.errors[:position].first %>
      </div>
    <% end %>
  </div>
</div>

<div class="mb-3">
  <%= f.label :status, class: "form-label" %>
  <%= f.select :status, 
              options_for_select([['Active', 'active'], ['Inactive', 'inactive']], @employee.status),
              {}, { class: "form-select #{'is-invalid' if @employee.errors[:status].any?}" } %>
  <% if @employee.errors[:status].any? %>
    <div class="invalid-feedback">
      <%= @employee.errors[:status].first %>
    </div>
  <% end %>
</div>