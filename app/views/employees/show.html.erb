<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Employee Details</h5>
        <div class="btn-group" style="gap:10px;">
          <%= link_to edit_employee_path(@employee), class: "btn btn-sm btn-outline-primary" do %>
            <i class="bi bi-pencil"></i> Edit
          <% end %>
          <%= button_to @employee, method: :delete, 
                     class: "btn btn-sm btn-outline-danger" do %>
            <i class="bi bi-trash"></i> Delete
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h6 class="text-muted">Full Name</h6>
            <p class="fs-5 fw-bold"><%= @employee.full_name %></p>
          </div>
          <div class="col-md-6">
            <h6 class="text-muted">Status</h6>
            <p>
              <span class="badge bg-<%= @employee.status_badge_class %> fs-6">
                <%= @employee.status.humanize %>
              </span>
            </p>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-6">
            <h6 class="text-muted">Email</h6>
            <p>
              <a href="mailto:<%= @employee.email %>" class="text-decoration-none">
                <i class="bi bi-envelope"></i> <%= @employee.email %>
              </a>
            </p>
          </div>
          <div class="col-md-6">
            <h6 class="text-muted">Phone</h6>
            <p>
              <% if @employee.phone.present? %>
                <a href="tel:<%= @employee.phone %>" class="text-decoration-none">
                  <i class="bi bi-phone"></i> <%= @employee.phone %>
                </a>
              <% else %>
                <span class="text-muted">Not provided</span>
              <% end %>
            </p>
          </div>
        </div>
        
        <div class="row">
          <div class="col-md-12">
            <h6 class="text-muted">Position</h6>
            <p>
              <span class="badge bg-info fs-6"><%= @employee.position %></span>
            </p>
          </div>
        </div>
        
        <hr>
        
        <div class="row text-muted small">
          <div class="col-md-6">
            <strong>Created:</strong> <%= @employee.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
          <div class="col-md-6">
            <strong>Last Updated:</strong> <%= @employee.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to "â† Back to Employees", employees_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>